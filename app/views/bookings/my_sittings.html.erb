</ul>
<h2 class="mb-3">My Sittings:</h2>
<% if @bookings.empty? %>
  <h5>You have no sittings!</h5>
<% else %>
  <% @bookings.each do |booking| %>
    <div class="d-flex flex-row w-100 border rounded mb-3 align-items-center shadow">
      <div class="align-self-start mr-3">
        <img src="<%= booking.user.profile_photo %>" class="img-fluid rounded-circle" alt="<%= current_user.first_name %>">
      </div>
      <div class="flex-grow-1">
        <div class="row align-items-center">
          <div class="col-md-4">
            <p><strong>Owner's Name:</strong> <%= "#{booking.user.first_name} #{booking.user.last_name}" %></p>
            <p><strong>Owner's Number:</strong> <%= booking.user.phone %></p>
          </div>
          <div class="col-md-4">
            <p><strong>Dates:</strong> <%= booking.start_date.strftime('%B %d, %Y') %> - <%= booking.end_date.strftime('%B %d, %Y') %></p>
            <p><strong>Service:</strong> <%= booking.service %></p>
          </div>
          <div class="col-md-4">
            <p><strong>Pet Name:</strong> <%= booking.pet_name %></p>
            <p><strong>Pet Type:</strong> <%= booking.pet_type %></p>
          </div>
        </div>
        <div class="row align-items-center mt-3">
          <div class="col-md-4 text-right">
            <p><strong>Price:</strong> R200</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
