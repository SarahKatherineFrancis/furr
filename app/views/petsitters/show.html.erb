<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="petsitter-show-card">
        <h1><%= @petsitter.user.first_name %> <%= @petsitter.user.last_name %></h1>
        <br>
        <p><strong>Email Address:</strong> <%= @petsitter.user.email %></p>
      </div>
      <div class="petsitter-show-card">
        <h3><strong>More information:</strong></h3>
        <br>
        <p><strong>Availability:</strong> <%= @petsitter.availability %></p>
        <p><strong>Experience:</strong> <%= @petsitter.experience %></p>
      </div>
    </div>

    <div class="col-4">
  <div class="petsitter-show-card">
    <h5>Hire me:</h5>
    <%= simple_form_for :booking, url: "" do |f| %>
      <%= f.input :start_date, label: "Start on:", input_html: {class: "form-control", placeholder: "Date + Time"} %>
      <%= f.input :end_date, label: "End at:", input_html: {class: "form-control", placeholder: "Date + Time"}%>
      <%= f.input :pet_name, label: "Pet Name:", input_html: {class: "form-control", placeholder: "Pet Name"}%>
      <%= f.input :pet_type, label: "Pet Type:", input_html: {class: "form-control", placeholder: "Dog | Cat | Parrot"} %>
      <%= f.input :service_description, label: "Service Description:", input_html: {class: "form-control", placeholder: "Walk | Feed"}%>
      <%= f.select :service_description, ['walk', 'feed', 'daycare']%>
      <%= f.submit "Book", class: "btn btn-secondary mt-2", style: "width: 100%" %>
    <% end %>
  </div>
</div>
      </div>
    </div>
  </div>
</div>
