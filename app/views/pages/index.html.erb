<div class="contents">
  <h2>Hello, <%= current_user.first_name.capitalize %>!</h2>

  <div class="section-head">
    <h2>Current Bookings</h2>
    <%= link_to "My Bookings", my_bookings_path, class: "btn btn-secondary" %>
  </div>

  <div class="bookings-container">
    <% bookings = Booking.where(user_id: current_user.id) %>
    <% if bookings.empty? %>
      <div class="empty-card">
        <h3>You currently have no bookings.</h3>
      </div>
    <% else %>
      <% bookings.each do |booking| %>
        <%= render "shared/booking_card", booking: booking %>
      <% end %>
    <% end %>
  </div>

  <div class="section-head">
    <h2>Local Sitters</h2>
    <%= link_to "View Sitters", petsitters_path, class: "btn btn-secondary" %>
  </div>

  <div class="row">
    <% petsitters = Petsitter.limit(4) %>
    <% petsitters.each do |petsitter| %>
      <div class="col-md-3 mb-3">
        <%= render "shared/petsitter_card", petsitter: petsitter %>
      </div>
    <% end %>
  </div>

</div>
